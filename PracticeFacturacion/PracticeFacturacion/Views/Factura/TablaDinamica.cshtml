@model List<F_Detail_2>
@{
}

<form asp-action="GuardarOperaciones">

    <table class="table">
        <thead>
            <tr>

                <th scope="col">Cantidad</th>
                <th scope="col">Descripcion del Producto</th>
                <th scope="col">Costo Unitario</th>
                <th scope="col">ITBIS</th>
                <th scope="col">Total</th>
            </tr>
        </thead>


        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <th>@item.Cantidad</th>
                    <th>@item.DescripcionProducto</th>
                    <th>@item.CostoUnitario</th>
                    <th>@item.Itbis</th>
                    <th>@item.Total</th>

                </tr>

            }

        </tbody>



    </table>

    @if(Model.Count > 0){
        <button class="btn btn-dark" type="submit">Guardar</button>
    }

</form>